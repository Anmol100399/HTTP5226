@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Car Show Room</h1>
    <p class="lead">Your one-stop solution for managing cars, owners, and staff members effectively.</p>
    <hr class="my-4" />
    <p>Explore our features and get started today!</p>
    <div class="button-container">
        <a class="btn btn-secondary btn-lg" asp-controller="CarPage" asp-action="List">View Cars</a>
        <a class="btn btn-secondary btn-lg" asp-controller="OwnerPage" asp-action="List">View Owners</a>
        <a class="btn btn-secondary btn-lg" asp-controller="StaffPage" asp-action="List">View Staff Members</a>
    </div>
</div>

<style>
    .text-center {
        padding: 50px 20px;
        background-color: #495057;
        color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .display-4 {
        color: #d9534f;
        font-weight: bold;
    }

    p {
        font-size: 2rem;
    }

    .lead {
        font-size: 2.1rem;
        margin-bottom: 20px;
    }

    .button-container {
        margin-top: 20px;
    }

    .btn {
        margin: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-secondary {
        background-color: #5bc0de;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
        transform: translateY(-2px);
    }
</style>
