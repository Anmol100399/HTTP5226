@model IEnumerable<PassionProject.Models.OwnerDto>

@{
    ViewData["Title"] = "Owner List";
}

<div class="container">
    <h1 class="my-4 text-center title-glow">Owner List</h1>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card card-hover shadow-sm border-light">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                            <p class="card-text">Contact: <strong>@Html.DisplayFor(modelItem => item.Contact)</strong></p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.OwnerId" class="btn btn-edit">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.OwnerId" class="btn btn-details">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.OwnerId" class="btn btn-delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No owners available.</div>
            </div>
        }
    </div>

    <div class="text-center mb-3">
        <a asp-action="New" asp-route-id="New" class="btn btn-add btn-lg">Add New Owner</a>
    </div>
</div>

<style>
    body {
        background-color: #343a40;
    }

    .title-glow {
        font-size: 4rem;
        font-weight: bold;
        color: #ffffff;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6);
    }

    .card-hover {
        transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
        background-color: #f8f9fa;
        color: #333333;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card-hover:hover {
            transform: scale(1.05);
            z-index: 1;
            background-color: #e9ecef;
            color: #333333;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .btn {
        color: #fff;
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        opacity: 0.99;
    }

        .btn:hover {
            opacity: 1;
        }

    .btn-edit {
        background-color: rgba(0, 123, 255, 0.7);
    }

        .btn-edit:hover {
            background-color: rgba(0, 86, 179, 0.9);
            transform: translateY(-2px);
        }

    .btn-details {
        background-color: rgba(40, 167, 69, 0.7);
    }

        .btn-details:hover {
            background-color: rgba(34, 139, 56, 0.9);
            transform: translateY(-2px);
        }

    .btn-delete {
        background-color: rgba(220, 53, 69, 0.7);
    }

        .btn-delete:hover {
            background-color: rgba(200, 35, 51, 0.9);
            transform: translateY(-2px);
        }

    .btn-add {
        background-color: rgba(23, 162, 184, 0.7);
    }

        .btn-add:hover {
            background-color: rgba(19, 132, 150, 0.9);
            transform: translateY(-2px);
        }

    .alert-info {
        background-color: #495057;
        color: #ffffff;
    }
</style>
