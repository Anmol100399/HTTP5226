@model PassionProject.Models.OwnerDto

<div class="container">
    <h2>Are you sure you want to delete this owner?</h2>

    <div class="model-row">
        <strong>Owner ID:</strong> <span class="model-value">@Model.OwnerId</span>
    </div>
    <div class="model-row">
        <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
    </div>
    <div class="model-row">
        <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
    </div>
    <div class="model-row">
        <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.OwnerId" />
        <div class="button-container">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #343a40;
        color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .container {
        max-width: 700px;
        margin: 50px auto;
        padding: 20px;
        background-color: #495057;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .model-row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    strong {
        margin-right: 10px;
        font-size: 1.5rem;
    }

    .model-value {
        font-size: 1.5rem;
        color: #ded4d4;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        flex: 1;
        margin: 0 5px;
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin-top: 10px;
        border-radius: 5px;
        text-decoration: none;
        flex: 1;
        margin: 0 5px;
        text-align: center;
        color: #fff;
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        opacity: 0.99;
    }

        .btn:hover {
            opacity: 1;
        }

    input[type="submit"] {
        background-color: #e74c3c;
    }

        input[type="submit"]:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
        }

    a.btn {
        background-color: #bdc3c7;
    }

        a.btn:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }
</style>
