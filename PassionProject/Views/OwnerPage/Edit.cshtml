@model PassionProject.Models.OwnerDto

@{
    ViewData["Title"] = "Edit Owner";
}

<div class="container">
    <h1>Updating Owner Details</h1>

    <form asp-action="Update" asp-route-id="@Model.OwnerId">
        <input type="hidden" asp-for="OwnerId" />

        <div class="form-group">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span> <!-- Error message -->
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span> <!-- Error message -->
        </div>

        <div class="form-group">
            <label asp-for="Contact" class="control-label">Contact</label>
            <input type="text" asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span> <!-- Error message -->
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
        body {
        background-color: #343a40; /* Dark background for the entire page */
        color: #f8f9fa; /* Light text color */
        font-family: Arial, sans-serif; /* Font style */
    }

    .container {
        max-width: 600px; /* Maximum width for the container */
        margin: 50px auto; /* Centering the container */
        padding: 20px; /* Padding inside the container */
        background-color: #495057; /* Darker gray for the container */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Soft shadow */
    }

    h1 {
        text-align: center; /* Center the heading */
        color: #d9534f; /* Title color */
        margin-bottom: 20px; /* Space below title */
    }

    .form-group {
        margin-bottom: 15px; /* Space between form groups */
    }

    .control-label {
        color: #f8f9fa; /* Light text color for labels */
    }

    .form-control {
        background-color: #6c757d; /* Light gray for input fields */
        color: #fff; /* White text color */
        border: 1px solid #ced4da; /* Border for input fields */
    }

    .form-control:focus {
        background-color: #495057; /* Darker background on focus */
        border-color: #d9534f; /* Highlight border color on focus */
    }

    .text-danger {
        font-size: 0.9rem; /* Slightly smaller font size for error messages */
    }

    .btn {
        width: 100%; /* Full width buttons */
        padding: 10px; /* Padding for buttons */
        border-radius: 5px; /* Rounded corners for buttons */
        text-decoration: none; /* Remove underline from links */
        transition: background-color 0.3s ease, transform 0.3s ease; /* Transition effects */
    }

    .btn-primary {
        background-color: #28a745; /* Green for Create button */
    }

    .btn-primary:hover {
        background-color: #218838; /* Darker green on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

    .btn-secondary {
        background-color: #bdc3c7; /* Light gray for back button */
    }

    .btn-secondary:hover {
        background-color: #95a5a6; /* Darker gray on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

</style>
