@model PassionProject.Models.StaffDto

<div class="container">
    <h1>Staff Details</h1>

    <div class="flex-container">
        <div class="personal-info">
            <div class="card-body">
                <h4>Personal Information</h4>
                <div class="model-row">
                    <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
                </div>
                <div class="model-row">
                    <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
                </div>
                <div class="model-row">
                    <strong>Position:</strong> <span class="model-value">@Model.Position</span>
                </div>
                <div class="model-row">
                    <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
                </div>
            </div>
        </div>

        <div class="managed-cars">
            <div class="card-body">
                <h4>Managed Cars</h4>
                <div class="car-list">
                    @foreach (var car in Model.Cars)
                    {
                        <div class="car-item">
                            <div class="model-row">
                                <strong>Car ID:</strong> <span class="model-value">@car.CarId</span>
                            </div>
                            <div class="model-row">
                                <strong>Make:</strong> <span class="model-value">@car.Make</span>
                            </div>
                            <div class="model-row">
                                <strong>Model:</strong> <span class="model-value">@car.Model</span>
                            </div>
                            <div class="model-row">
                                <strong>Year:</strong> <span class="model-value">@car.Year</span>
                            </div>
                            <div class="model-row">
                                <strong>Owner:</strong> <span class="model-value">@car.OwnerName</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 button-container">
        <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">Edit</a>
        <a asp-action="List" class="btn btn-secondary btn-small">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* Dark background for the entire page */
        color: #f8f9fa; /* Light text color */
        font-family: Arial, sans-serif; /* Font style */
    }

    h1, h4 {
        text-align: center; /* Center headings */
        color: #d9534f; /* Title color */
        margin-bottom: 15px; /* Space below titles */
    }

    .container {
        max-width: 900px; /* Increased width for the container */
        margin: 50px auto; /* Centering the container */
        padding: 20px; /* Padding inside the container */
        background-color: #495057; /* Darker gray for the container */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Soft shadow */
    }

    .flex-container {
        display: flex; /* Use flexbox for layout */
        justify-content: center; /* Center the entire flex container */
        flex-wrap: wrap; /* Wrap if there's not enough space */
    }

    .personal-info, .managed-cars {
        flex: 1; /* Allow both to grow equally */
        margin: 30px; /* Space between columns */
        min-width: 250px; /* Minimum width for columns */
        max-width: 300px; /* Limit the width of each column */
    }

    .card-body {
        margin-bottom: 20px; /* Space below card sections */
        padding: 10px; /* Padding for card body */
        background-color: #6c757d; /* Light gray for card body */
        border-radius: 5px; /* Rounded corners for card body */
    }

    .model-row {
        display: flex; /* Enable flexbox */
        justify-content: flex-start; /* Align items to the start */
        align-items: center; /* Align items vertically */
        margin-bottom: 5px; /* Space between rows */
    }

    strong {
        margin-right: 5px; /* Space between strong and value */
        font-size: 1.2rem; /* Increased font size for strong elements */
    }

    .model-value {
        font-size: 1.2rem; /* Set the font size for model values */
        color: #ded4d4; /* Optional: light color for better readability */
    }

    .car-item {
        margin-bottom: 25px;
        padding: 9px;
        border: 2px solid #fff;
        border-radius: 10px;
    }

    .button-container {
        display: flex; /* Enable flexbox */
        justify-content: center; /* Center buttons */
        margin-top: 20px; /* Space above buttons */
    }

    .btn {
        flex: 1; /* Make buttons take equal space */
        margin: 0 5px; /* Space between buttons */
        text-align: center; /* Center text in buttons */
        padding: 8px 10px; /* Smaller padding for buttons */
        border-radius: 5px; /* Rounded corners for buttons */
        text-decoration: none; /* Remove underline from links */
        transition: background-color 0.3s ease, transform 0.3s ease; /* Transition effects */
        color: #fff; /* White text for buttons */
        border: none; /* Remove border */
    }

    .btn-primary {
        background-color: #28a745; /* Green for Edit button */
    }

        .btn-primary:hover {
            background-color: #218838; /* Darker green on hover */
            transform: translateY(-2px); /* Subtle lift effect on hover */
        }

    .btn-secondary {
        background-color: #bdc3c7; /* Light gray for back button */
    }

        .btn-secondary:hover {
            background-color: #95a5a6; /* Darker gray on hover */
            transform: translateY(-2px); /* Subtle lift effect on hover */
        }

    .btn-small {
        font-size: 0.9rem; /* Smaller font size for buttons */
        padding: 5px 10px; /* Smaller padding for buttons */
    }
</style>
