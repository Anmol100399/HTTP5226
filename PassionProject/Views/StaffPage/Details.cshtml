@model PassionProject.Models.StaffDto

<div class="container">
    <h1>Staff Details</h1>

    <div class="flex-container">
        <div class="personal-info">
            <div class="card-body">
                <h4>Personal Information</h4>
                <div class="model-row">
                    <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
                </div>
                <div class="model-row">
                    <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
                </div>
                <div class="model-row">
                    <strong>Position:</strong> <span class="model-value">@Model.Position</span>
                </div>
                <div class="model-row">
                    <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
                </div>
            </div>
        </div>

        <div class="managed-cars">
            <div class="card-body">
                <h4>Managed Cars</h4>
                <div class="car-list">
                    @foreach (var car in Model.Cars)
                    {
                        <div class="car-item">
                            <div class="model-row">
                                <strong>Car ID:</strong> <span class="model-value">@car.CarId</span>
                            </div>
                            <div class="model-row">
                                <strong>Make:</strong> <span class="model-value">@car.Make</span>
                            </div>
                            <div class="model-row">
                                <strong>Model:</strong> <span class="model-value">@car.Model</span>
                            </div>
                            <div class="model-row">
                                <strong>Year:</strong> <span class="model-value">@car.Year</span>
                            </div>
                            <div class="model-row">
                                <strong>Owner:</strong> <span class="model-value">@car.OwnerName</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 button-container">
        <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">Edit</a>
        <a asp-action="List" class="btn btn-secondary btn-small">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #343a40;
        color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background-color: #495057;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .flex-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

    .personal-info, .managed-cars {
        flex: 1;
        margin: 30px;
        min-width: 250px;
        max-width: 300px;
    }

    .card-body {
        margin-bottom: 20px;
        padding: 10px;
        background-color: #6c757d;
        border-radius: 5px;
    }

    .model-row {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 5px;
    }

    strong {
        margin-right: 5px;
        font-size: 1.2rem;
    }

    .model-value {
        font-size: 1.2rem;
        color: #ded4d4;
    }

    .car-item {
        margin-bottom: 25px;
        padding: 9px;
        border: 2px solid #fff;
        border-radius: 10px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn {
        flex: 1;
        margin: 0 5px;
        text-align: center;
        padding: 8px 10px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        color: #fff;
        border: none;
    }

    .btn-primary {
        background-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #bdc3c7;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }

    .btn-small {
        font-size: 0.9rem;
        padding: 5px 10px;
    }
</style>
