@model IEnumerable<PassionProject.Models.StaffDto>

@{
    ViewData["Title"] = "Staff List";
}

<div class="container">
    <h1 class="my-4 text-center title-glow">Staff List</h1>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card card-hover shadow-sm border-light">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                            <p class="card-text">Position: <strong>@Html.DisplayFor(modelItem => item.Position)</strong></p>
                            <p class="card-text">Contact: <strong>@Html.DisplayFor(modelItem => item.Contact)</strong></p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-edit">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-details">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No staff available.</div>
            </div>
        }
    </div>

    <div class="text-center mb-3">
        <a asp-action="New" asp-route-id="New" class="btn btn-add btn-lg">Add New Staff</a>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* Dark background for the entire page */
    }

    .title-glow {
        font-size: 4rem; /* Increased font size for the title */
        font-weight: bold; /* Make the title bold */
        color: #ffffff; /* White color for the title */
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6); /* Glow effect */
    }

    .card-hover {
        transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
        background-color: #f8f9fa; /* Light gray background color for the card */
        color: #333333; /* Dark text color */
        border: 1px solid #e0e0e0; /* Light gray border for the card */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for the card */
    }

    .card-hover:hover {
        transform: scale(1.05);
        z-index: 1;
        background-color: #e9ecef; /* Slightly darker background color on hover */
        color: #333333; /* Keep text color dark on hover */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Increased shadow on hover */
    }

    .btn {
        color: #fff; /* White text color for buttons */
        border: none; /* Remove border */
        transition: background-color 0.3s ease, transform 0.3s ease;
        opacity: 0.99; /* Slight transparency */
    }

    .btn:hover {
        opacity: 1; /* Full opacity on hover */
    }

    .btn-edit {
        background-color: rgba(0, 123, 255, 0.7); /* Light blue for Edit button */
    }

    .btn-edit:hover {
        background-color: rgba(0, 86, 179, 0.9); /* Darker blue on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

    .btn-details {
        background-color: rgba(40, 167, 69, 0.7); /* Light green for Details button */
    }

    .btn-details:hover {
        background-color: rgba(34, 139, 56, 0.9); /* Darker green on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

    .btn-delete {
        background-color: rgba(220, 53, 69, 0.7); /* Light red for Delete button */
    }

    .btn-delete:hover {
        background-color: rgba(200, 35, 51, 0.9); /* Darker red on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

    .btn-add {
        background-color: rgba(23, 162, 184, 0.7); /* Light teal for Add button */
    }

    .btn-add:hover {
        background-color: rgba(19, 132, 150, 0.9); /* Darker teal on hover */
        transform: translateY(-2px); /* Subtle lift effect on hover */
    }

    .alert-info {
        background-color: #495057; /* Darker background for alerts */
        color: #ffffff; /* White text for alerts */
    }
</style>
