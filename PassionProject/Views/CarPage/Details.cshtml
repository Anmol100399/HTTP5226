@model PassionProject.Models.CarDto

<div class="container">
    <h1>Car Details</h1>

    <div class="card-body">
        <div class="model-row">
            <strong>Car ID:</strong> <span class="model-value">@Model.CarId</span>
        </div>
        <div class="model-row">
            <strong>Make:</strong> <span class="model-value">@Model.Make</span>
        </div>
        <div class="model-row">
            <strong>Model:</strong> <span class="model-value">@Model.Model</span>
        </div>
        <div class="model-row">
            <strong>Year:</strong> <span class="model-value">@Model.Year</span>
        </div>
        <div class="model-row">
            <strong>Owner Name:</strong> <span class="model-value">@Model.OwnerName</span>
        </div>

        <div class="mt-3 button-container">
            <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary">Edit</a>
            <a asp-action="List" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #343a40;
        color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .container {
        max-width: 700px;
        margin: 50px auto;
        padding: 20px;
        background-color: #495057;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .model-row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    strong {
        margin-right: 10px;
        font-size: 1.5rem;
    }

    .model-value {
        font-size: 1.5rem;
        color: #ded4d4;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        flex: 1;
        margin: 0 5px;
        text-align: center;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        color: #fff;
        border: none;
    }

    .btn-primary {
        background-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    a.btn-secondary {
        background-color: #bdc3c7;
    }

        a.btn-secondary:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }
</style>
