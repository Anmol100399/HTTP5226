@model PassionProject.Models.CarDto

    <div class="container">

    <h2>Are you sure you want to delete this car?</h2>

    <div class="model-row">
        <strong>Make:</strong> <span class="model-value">@Model.Make</span>
    </div>
    <div class="model-row">
        <strong>Model:</strong> <span class="model-value">@Model.Model</span>
    </div>
    <div class="model-row">
        <strong>Year:</strong> <span class="model-value">@Model.Year</span>
    </div>
    <div class="model-row">
        <strong>Owner:</strong> <span class="model-value">@Model.OwnerName</span>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.CarId">
        <input type="hidden" asp-for="CarId" />
        <div class="button-container">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="List" class="btn btn-secondary">Back</a>
        </div>
    </form>

</div>


<style>
    body {
        background-color: #343a40; /* Dark background for the entire page */
        color: #f8f9fa; /* Light text color */
        font-family: Arial, sans-serif; /* Font style */
    }

    h2 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .container {
        max-width: 700px; /* Maximum width for the confirmation box */
        margin: 50px auto; /* Centering the container */
        padding: 20px;
        background-color: #495057; /* Darker gray for the container */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Soft shadow */
    }

    .model-row {
        display: flex; /* Enable flexbox */
        justify-content: center; /* Center items horizontally */
        align-items: center; /* Align items vertically */
        margin-bottom: 10px; /* Optional: space between rows */
    }

    strong {
        margin-right: 10px;
        font-size: 1.5rem;
    }

    .model-value {
        font-size: 1.5rem; /* Set the font size to 1rem */
        color: #ded4d4; /* Optional: light color for better readability */
    }

    .button-container {
        display: flex; /* Enable flexbox */
        justify-content: space-between; /* Space out items */
        margin-top: 20px; /* Space above buttons */
    }

    .btn {
        flex: 1; /* Make buttons take equal space */
        margin: 0 5px; /* Optional: margin for spacing between buttons */
        text-align: center; /* Center text in buttons */
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        margin-top: 10px;
        border-radius: 5px;
        text-decoration: none;
        flex: 1; /* Make buttons take equal space */
        margin: 0 5px; /* Optional: margin for spacing between buttons */
        text-align: center;
        color: #fff; /* White text for buttons */
        border: none; /* Remove border */
        transition: background-color 0.3s ease, transform 0.3s ease;
        opacity: 0.99; /* Slight transparency */
    }

        .btn:hover {
            opacity: 1; /* Full opacity on hover */
        }

    input[type="submit"] {
        background-color: #e74c3c; /* Danger red for delete button */
    }

        input[type="submit"]:hover {
            background-color: #c0392b; /* Darker red on hover */
            transform: translateY(-2px); /* Subtle lift effect on hover */
        }

    a.btn {
        background-color: #bdc3c7; /* Light gray for back button */
    }

        a.btn:hover {
            background-color: #95a5a6; /* Darker gray on hover */
            transform: translateY(-2px); /* Subtle lift effect on hover */
        }

</style>
